@model IEnumerable<GameOfThrones.Models.Character>

@{
    ViewBag.Title = "Characters";
}

<p style="padding-left:10px;">

    <button class="btn btn-default" onclick="location.href='@Url.Action("Create")';" >Create New</button>
 
</p>
<div class="grid">
    @foreach (var item in Model)
    {
    <div class="grid-item" style="width:25%; float:left; ">
        <a href="@Url.Action("Details", new { id = item.Id })" style="text-decoration: none">
            <img src="@Url.Content(item.Image)" style="width:100%;" />
            <div class="grid-inner">
                <div class="grid-inner-text">@Html.DisplayFor(modelItem => item.Name)</div>
                <div class="grid-inner-img"><img src="@Url.Content(item.House.Flag)" style="width:10%; float:right" /></div>
            </div>
        </a>
    </div>
    }
</div>  